#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

int main()
{
  int items;
  cin >> items;

  vector<int> prices;
  for (int i{0}; i < items; i++)
    {
      int price;
      cin >> price;
      prices.push_back(price);
    }

  sort(prices.begin(), prices.end());

  int discount{0};
  int index{items - 1};
  while (index < items)
    {
      if (index - 2 >= 0)
	{
	  discount += prices.at(index - 2);
	  index -= 3;
	}
      else
	index = items;
    }

  cout << discount << endl;

  return 0;
}
